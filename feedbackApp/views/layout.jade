doctype html
html
  head
    base(href='/')
    title= title
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href='http://fonts.googleapis.com/css?family=Roboto+Condensed' rel='stylesheet' type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Gafata' rel='stylesheet' type='text/css')
  body(ng-app='myApp')
    
    
    .row(ng-controller='logoutCtrl')
      .col-md-1
      .col-md-2
        ul.nav.nav-list(ng-show='!rootuser')
          li.nav-header
          li.active
            a.navButtons(href='/register') Register
          li.active
            a.navButtons(href='/login') Login
        ul.nav.nav-list(ng-show='rootuser')
          li.nav-header
          li.active
            a.navButtons(href='/userHome') Home
          li 
            a.navButtons(href='/addProperties') Add Property
          li 
            a.navButtons(href='/changeProperty') Change Property Status
          li 
            a.navButtons(ng-click='logout()') Logout
      block content



