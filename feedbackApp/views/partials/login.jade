.row(ng-controller='loginCtrl')
    .col-md-4
    .col-md-4
      h1 {{message}}
      p Welcome to {{message}}
      form(method='POST')
        .formfield
          .formprompt
          input#username(type='text', name='username', ng-model='user.username')
        .formfield
          .formprompt
          input#password(type='password', name='password', ng-model='user.password')
          br
          input.submitButton(type='submit', ng-click='login()')
      img.img-responsive(src='/images/homeimg.jpg', id='homeimg')
    .col-md-4